{
  "openapi": "3.0.0",
  "info": {
    "title": "PetShop API",
    "description": "API para gerenciamento de um PetShop, incluindo atendentes, clientes e pets.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Servidor de Desenvolvimento"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Attendant": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "João Atendente"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "joao@petshop.com"
          }
        }
      },
      "Client": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Maria Cliente"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "maria@cliente.com"
          },
          "phone": {
            "type": "string",
            "example": "11987654321"
          }
        }
      },
      "Pet": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Rex"
          },
          "species": {
            "type": "string",
            "example": "Cachorro"
          },
          "breed": {
            "type": "string",
            "example": "Vira-lata"
          },
          "birthDate": {
            "type": "string",
            "format": "date",
            "example": "2022-01-15"
          },
          "client": {
            "$ref": "#/components/schemas/Client"
          },
          "attendant": {
            "$ref": "#/components/schemas/Attendant"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Registra um novo atendente",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Atendente registrado com sucesso" },
          "400": { "description": "Campos obrigatórios faltando" },
          "409": { "description": "E-mail já cadastrado" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Autentica um atendente e retorna um token JWT",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "token": { "type": "string" } }
                }
              }
            }
          },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/clients": {
      "get": {
        "summary": "Lista todos os clientes",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Client" }
                }
              }
            }
          },
          "401": { "description": "Não autorizado" }
        }
      },
      "post": {
        "summary": "Cria um novo cliente",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "phone": { "type": "string" }
                },
                "required": ["name", "email"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Cliente criado com sucesso" },
          "400": { "description": "Campos obrigatórios faltando" },
          "401": { "description": "Não autorizado" },
          "409": { "description": "E-mail já cadastrado" }
        }
      }
    },
    "/clients/{id}": {
      "get": {
        "summary": "Busca um cliente pelo ID",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Cliente encontrado" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Cliente não encontrado" }
        }
      },
      "put": {
        "summary": "Atualiza um cliente",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "phone": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Cliente atualizado" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Cliente não encontrado" }
        }
      },
      "delete": {
        "summary": "Deleta um cliente",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "204": { "description": "Cliente deletado com sucesso" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Cliente não encontrado" }
        }
      }
    },
    "/pets": {
      "get": {
        "summary": "Lista todos os pets",
        "tags": ["Pets"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de pets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Pet" }
                }
              }
            }
          },
          "401": { "description": "Não autorizado" }
        }
      },
      "post": {
        "summary": "Cria um novo pet",
        "tags": ["Pets"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "species": { "type": "string" },
                  "breed": { "type": "string" },
                  "birthDate": { "type": "string", "format": "date" },
                  "clientId": { "type": "integer" }
                },
                "required": ["name", "species", "clientId"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Pet criado com sucesso" },
          "400": { "description": "Campos obrigatórios faltando" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Cliente não encontrado" }
        }
      }
    },
    "/pets/{id}": {
      "get": {
        "summary": "Busca um pet pelo ID",
        "tags": ["Pets"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Pet encontrado" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Pet não encontrado" }
        }
      },
      "put": {
        "summary": "Atualiza um pet",
        "tags": ["Pets"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "species": { "type": "string" },
                  "breed": { "type": "string" },
                  "birthDate": { "type": "string", "format": "date" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Pet atualizado" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Pet não encontrado" }
        }
      },
      "delete": {
        "summary": "Deleta um pet",
        "tags": ["Pets"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "204": { "description": "Pet deletado com sucesso" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Pet não encontrado" }
        }
      }
    }
  }
}